<div class="post-warp">
  <h1 class="post-title"><%- page.subTitle || page.title %></h1>
  <p class="subtitle"> 发布于 <%- full_date(page.date, 'YYYY-MM-DD') %></p>

  <p class="post-content">
    <% if (page.link) { %> 
      <p >
        <strong> 🌐 传送门：
          <a href="<%- page.link %>?from=w3cay.com" target="_blank" rel="external nofollow noopener noreferrer"><%- page.link %>
          </a>
      </strong></p>
    <% } %>
    <% if (page.cover) { %> <img alt="<%- page.subTitle || page.title %>" src="<%- page.cover %>" /> <% } %>
    <%- page.content%>
  </p>

  <% if (page.tags.length > 0) { %>
    <p class="post-tags">标签：<%- list_tags(page.tags, {class: 'classtest', show_count: false, style: false}) %></p>
  <% } %>

  <%- partial('partial/comments') %>

</div>

  <link rel="stylesheet" href="<%- theme.highlight_css %>">
  <script src="<%- theme.highlight_js %>"></script>
  <script>hljs.initHighlightingOnLoad();</script>